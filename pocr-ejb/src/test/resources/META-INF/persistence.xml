<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="pocr_test-pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>eu.micul01.pocr.entity.ApplicationEntity</class>
		<class>eu.micul01.pocr.entity.FormEntity</class>
		<class>eu.micul01.pocr.entity.FieldEntity</class>
		<class>eu.micul01.pocr.entity.TypeEntity</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/pocr_test" />
			<property name="javax.persistence.jdbc.user" value="pocr_test" />
			<property name="javax.persistence.jdbc.password" value="pocr_test" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <property name="eclipselink.logging.level" value="INFO" />
		</properties>
	</persistence-unit>
</persistence>